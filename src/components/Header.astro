<header
  class="fixed top-0 w-full bg-white/95 backdrop-blur-md border-b border-gray-100 z-50 transition-all duration-300"
  id="header"
>
  <div class="container mx-auto px-4 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <div class="flex items-center space-x-3">
        <!-- Contenedor del logo más grande para que se vea completo -->
        <div class="w-16 h-12 flex items-center justify-center">
          <img
            src="/public/images/logo/logo.png"
            alt="Kachris Transport"
            class="h-full w-auto object-contain"
          />
        </div>
        <div>
          <h1 class="text-xl font-bold text-gray-900">Kachris Transport</h1>
          <p class="text-xs text-gray-500">SAC</p>
        </div>
      </div>

      <!-- Navigation Desktop -->
      <nav class="hidden lg:flex items-center space-x-8">
        <a
          href="#inicio"
          class="text-gray-700 hover:text-orange-600 font-medium transition-colors duration-200"
          >Inicio</a
        >
        <a
          href="#nosotros"
          class="text-gray-700 hover:text-orange-600 font-medium transition-colors duration-200"
          >Nosotros</a
        >
        <a
          href="#flota"
          class="text-gray-700 hover:text-orange-600 font-medium transition-colors duration-200"
          >Flota</a
        >
        <a
          href="#socios"
          class="text-gray-700 hover:text-orange-600 font-medium transition-colors duration-200"
          >Socios</a
        >
        <a
          href="#cotizacion"
          class="bg-orange-600 text-white px-6 py-2 rounded-full hover:bg-orange-700 transition-colors duration-200 font-medium"
          >Cotización</a
        >
      </nav>

      <!-- Mobile Menu Button -->
      <button class="lg:hidden p-2" id="mobile-menu-button">
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div class="lg:hidden hidden" id="mobile-menu">
      <div class="py-4 space-y-4 border-t border-gray-100">
        <a
          href="#inicio"
          class="block text-gray-700 hover:text-orange-600 font-medium"
          >Inicio</a
        >
        <a
          href="#nosotros"
          class="block text-gray-700 hover:text-orange-600 font-medium"
          >Nosotros</a
        >
        <a
          href="#flota"
          class="block text-gray-700 hover:text-orange-600 font-medium">Flota</a
        >
        <a
          href="#socios"
          class="block text-gray-700 hover:text-orange-600 font-medium"
          >Socios</a
        >
        <a
          href="#cotizacion"
          class="block bg-orange-600 text-white px-6 py-2 rounded-full text-center font-medium"
          >Cotización</a
        >
      </div>
    </div>
  </div>
</header>

<script>
  const mobileMenuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  mobileMenuButton?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("hidden");
  });

  // Header scroll effect
  window.addEventListener("scroll", () => {
    const header = document.getElementById("header");
    if (window.scrollY > 100) {
      header?.classList.add("shadow-lg");
    } else {
      header?.classList.remove("shadow-lg");
    }
  });
</script>
