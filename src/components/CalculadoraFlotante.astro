  const calcBtn = document.getElementById("calculadora-btn");
  const calcModal = document.getElementById("calculadora-modal");
  const calcClose = document.getElementById("calculadora-close");
  const calcContent = document.getElementById("calculadora-content");
  const calcForm = document.getElementById("calculadora-form");
  const calcResultado = document.getElementById("calc-resultado");
  const calcContenido = document.getElementById("calc-contenido");
  const formularioSection = document.getElementById("formulario-section");

  // Funciones de modal
  function abrirCalculadora() {
    calcModal.classList.remove("hidden");
    setTimeout(() => {
      calcModal.classList.remove("opacity-0");
      calcContent.classList.remove("scale-95");
      calcContent.classList.add("scale-100");
    }, 10);
    document.body.style.overflow = "hidden";
  }

  function cerrarCalculadora() {
    calcModal.classList.add("opacity-0");
    calcContent.classList.add("scale-95");
    calcContent.classList.remove("scale-100");
    setTimeout(() => {
      calcModal.classList.add("hidden");
      document.body.style.overflow = "auto";
    }, 300);
  }

  function nuevaCotizacion() {
    calcForm.reset();
    calcResultado.classList.add("hidden");
    formularioSection.classList.remove("hidden");
    cotizacionActual = null;

    setTimeout(() => {
      formularioSection.scrollIntoView({ behavior: "smooth", block: "start" });
    }, 100);
  }

  // Event listeners
  calcBtn?.addEventListener("click", abrirCalculadora);
  calcClose?.addEventListener("click", cerrarCalculadora);

  calcModal?.addEventListener("click", (e) => {
    if (e.target === calcModal) {
      cerrarCalculadora();
    }
  });

  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape" && !calcModal.classList.contains("hidden")) {
      cerrarCalculadora();
    }
  });

  // Procesar formulario
  calcForm?.addEventListener("submit", function (e) {
    e.preventDefault();

    const formData = new FormData(this);
    const datos = Object.fromEntries(formData);

    if (!datos.origen || !datos.destino || !datos.servicio) {
